<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.example.shop.RegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="textFieldLogin" prefWidth="150.0" promptText="Логин"/>
    <TextField fx:id="textFieldPassword" prefWidth="150.0" promptText="Пароль"/>
    <Button alignment="CENTER" onAction="#handleRegister" prefHeight="26.0" prefWidth="146.0"
            text="Зарегистрироваться"/>
</VBox>

